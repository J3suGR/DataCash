<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vibrant_dashboard_bg"
    tools:context=".RecibirActivity">

    <!-- Guidelines para márgenes consistentes -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <!-- Encabezado de la pantalla -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Botón de volver"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#2C3E50" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Recibir Dinero"
        android:textColor="#2C3E50"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="@id/backButton" />

    <!-- Tarjeta principal con el código QR -->
    <androidx.cardview.widget.CardView
        android:id="@+id/qrCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/titleTextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vibrant_card_gradient"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escanea para enviarme dinero"
                android:textSize="16sp"
                android:textColor="#555555"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:id="@+id/qrCodeImageView"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:contentDescription="Código QR para recibir dinero"
                android:src="@drawable/ic_qr_code" />

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Juan Pérez"
                android:textSize="18sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/userPhoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="+51 987 654 321"
                android:textSize="14sp"
                android:textColor="#777777" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón para compartir -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/shareButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/gradient_blue_teal"
        android:fontFamily="sans-serif-medium"
        android:text="Compartir Código QR"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_share"
        app:iconTint="@android:color/white"
        app:iconSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start" />

</androidx.constraintlayout.widget.ConstraintLayout>
