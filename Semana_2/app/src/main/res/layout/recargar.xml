<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="#E1F5FE"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recargar Saldo"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#0277BD"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/inputMontoRecarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa monto a recargar"
        android:inputType="numberDecimal"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnRecargarTarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recargar con Tarjeta"
        android:backgroundTint="#29B6F6"
        android:textColor="#FFF"/>

    <Button
        android:id="@+id/btnRecargarPaypal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recargar con PayPal"
        android:backgroundTint="#0288D1"
        android:textColor="#FFF"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnRecargarEfectivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recargar en Agente"
        android:backgroundTint="#01579B"
        android:textColor="#FFF"
        android:layout_marginTop="10dp"/>

</LinearLayout>
