<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    android:padding="16dp">

    <!-- Encabezado -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="DataCash ðŸ’³"
        android:textSize="28sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:background="#0D47A1" />

    <!-- Tarjeta de saldo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="16dp"
        android:background="#BBDEFB"
        android:gravity="center">

        <TextView
            android:id="@+id/tvBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola, Laura ðŸ‘‹"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0D47A1" />

        <TextView
            android:id="@+id/tvSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Saldo disponible"
            android:textSize="16sp"
            android:textColor="#37474F" />

        <TextView
            android:id="@+id/tvMontoSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 1,250.00"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Acciones principales -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/btnRecargar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#4CAF50"
            android:text="Recargar"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF9800"
            android:text="Enviar"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnRecibir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#673AB7"
            android:text="Recibir"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- Accesos rÃ¡pidos -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accesos rÃ¡pidos âš¡"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#212121"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btnServicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:text="Pagos de servicios"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnTienda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9C27B0"
        android:text="Tienda"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnHistorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5722"
        android:text="Historial"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnNotificaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#455A64"
