<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.datacash.ui.auth.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.datacash.ui.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.datacash.ui.auth.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_verifyEmailFragment"
            app:destination="@id/verifyEmailFragment" />
    </fragment>

    <fragment
        android:id="@+id/verifyEmailFragment"
        android:name="com.example.datacash.ui.auth.VerifyEmailFragment"
        android:label="fragment_verify_email"
        tools:layout="@layout/fragment_verify_email" >
        <action
            android:id="@+id/action_verifyEmailFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.datacash.ui.dashboard.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action android:id="@+id/action_dashboard_to_notifications" app:destination="@id/notificationsFragment" />
        <action android:id="@+id/action_dashboard_to_selectRecipient" app:destination="@id/selectRecipientFragment" />
        <action android:id="@+id/action_dashboard_to_receiveMoney" app:destination="@id/receiveMoneyFragment" />
        <action android:id="@+id/action_dashboard_to_transactions" app:destination="@id/transactionsFragment" />
        <action android:id="@+id/action_dashboard_to_services" app:destination="@id/servicesFragment" />
        <action android:id="@+id/action_dashboard_to_store" app:destination="@id/storeFragment" />
        <action android:id="@+id/action_dashboard_to_profile" app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/servicesFragment"
        android:name="com.example.datacash.ui.services.ServicesFragment"
        android:label="fragment_services"
        tools:layout="@layout/fragment_services" >
        <action
            android:id="@+id/action_servicesFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
        <action
            android:id="@+id/action_servicesFragment_to_storeFragment"
            app:destination="@id/storeFragment" />
        <action
            android:id="@+id/action_servicesFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/storeFragment"
        android:name="com.example.datacash.ui.store.StoreFragment"
        android:label="fragment_store"
        tools:layout="@layout/fragment_store" >
        <action
            android:id="@+id/action_storeFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
        <action
            android:id="@+id/action_storeFragment_to_servicesFragment"
            app:destination="@id/servicesFragment" />
        <action
            android:id="@+id/action_storeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.datacash.ui.profile.ProfileFragment"
        android:label="fragment_profile" >
        <action android:id="@+id/action_profileFragment_to_editProfileFragment" app:destination="@id/editProfileFragment" />
        <action android:id="@+id/action_profileFragment_to_securityFragment" app:destination="@id/securityFragment" />
        <action android:id="@+id/action_profileFragment_to_helpFragment" app:destination="@id/helpFragment" />
        <action android:id="@+id/action_profileFragment_to_dashboardFragment" app:destination="@id/dashboardFragment" />
        <action android:id="@+id/action_profileFragment_to_servicesFragment" app:destination="@id/servicesFragment" />
        <action android:id="@+id/action_profileFragment_to_storeFragment" app:destination="@id/storeFragment" />
        <action android:id="@+id/action_profileFragment_to_welcomeFragment" app:destination="@id/welcomeFragment" app:popUpTo="@id/nav_graph" app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.datacash.ui.notifications.NotificationsFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/transactionsFragment"
        android:name="com.example.datacash.ui.transactions.TransactionsFragment"
        android:label="fragment_transactions"
        tools:layout="@layout/fragment_transactions" />
    <fragment
        android:id="@+id/receiveMoneyFragment"
        android:name="com.example.datacash.ui.receive.ReceiveMoneyFragment"
        android:label="fragment_receive_money"
        tools:layout="@layout/fragment_receive_money" />

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.datacash.ui.profile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/securityFragment"
        android:name="com.example.datacash.ui.profile.SecurityFragment"
        android:label="fragment_security"
        tools:layout="@layout/fragment_security" />
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.example.datacash.ui.profile.HelpFragment"
        android:label="fragment_help"
        tools:layout="@layout/fragment_help" />

    <fragment
        android:id="@+id/selectRecipientFragment"
        android:name="com.example.datacash.ui.send.SelectRecipientFragment"
        android:label="fragment_select_recipient"
        tools:layout="@layout/fragment_select_recipient" >
        <action
            android:id="@+id/action_selectRecipientFragment_to_sendMoneyFragment"
            app:destination="@id/sendMoneyFragment" />
    </fragment>
    <fragment
        android:id="@+id/sendMoneyFragment"
        android:name="com.example.datacash.ui.send.SendMoneyFragment"
        android:label="fragment_send_money"
        tools:layout="@layout/fragment_send_money" >
        <action
            android:id="@+id/action_sendMoneyFragment_to_sendSuccessFragment"
            app:destination="@id/sendSuccessFragment" />
    </fragment>
    <fragment
        android:id="@+id/sendSuccessFragment"
        android:name="com.example.datacash.ui.send.SendSuccessFragment"
        android:label="fragment_send_success"
        tools:layout="@layout/fragment_send_success" >
        <action
            android:id="@+id/action_sendSuccessFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/dashboardFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>