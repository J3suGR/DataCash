<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main_background"
    tools:context=".ui.dashboard.DashboardFragment">

    <View
        android:id="@+id/gradientHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/header_35_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingTop="48dp"
                android:paddingBottom="24dp"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvProfileSmall"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <ImageView
                        android:id="@+id/ivProfileSmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_account_circle"
                        app:tint="#8572D2"
                        android:padding="4dp"
                        android:scaleType="centerCrop"/>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/cvProfileSmall"
                    app:layout_constraintTop_toTopOf="@id/cvProfileSmall"
                    app:layout_constraintBottom_toBottomOf="@id/cvProfileSmall">
                    <TextView
                        android:id="@+id/tvGreeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hola,"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="@android:color/white"
                        android:alpha="0.9"/>
                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usuario"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivNotifications"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_notifications"
                    app:tint="@android:color/white"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardBalance"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/credit_card_background"
                android:elevation="16dp"
                android:outlineProvider="background"
                app:layout_constraintDimensionRatio="1.58:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topBar">

                <ImageView
                    android:id="@+id/ivCardWatermark"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/logo"
                    android:scaleType="centerCrop"
                    android:alpha="0.05"
                    android:layout_margin="-20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/ivCardTopLogo"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:src="@drawable/logo"
                    android:scaleType="fitEnd"
                    android:alpha="0.8"
                    app:tint="@android:color/white"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/ivContactless"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_wifi"
                    android:rotation="90"
                    app:tint="@android:color/white"
                    android:alpha="0.8"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvCardLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:alpha="0.8"
                    android:text="Saldo disponible"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivContactless" />

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/. 0.00"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@id/tvCardLabel"
                    app:layout_constraintTop_toBottomOf="@id/tvCardLabel" />

                <ImageView
                    android:id="@+id/ivChip"
                    android:layout_width="48dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="24dp"
                    android:src="@drawable/ic_apps"
                    app:tint="#FFD700"
                    app:layout_constraintVertical_bias="0.6"
                    app:layout_constraintStart_toStartOf="@id/tvBalance"
                    app:layout_constraintTop_toBottomOf="@id/tvBalance"
                    app:layout_constraintBottom_toTopOf="@id/tvCardNumber" />

                <TextView
                    android:id="@+id/tvCardNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:alpha="0.9"
                    android:text="**** **** **** 1234"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@android:color/white"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/ivChip" />

                <ImageView
                    android:id="@+id/ivCardBrand"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/ic_home"
                    app:tint="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="@id/tvCardNumber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvCardNumber" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/layoutActions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="@id/cardBalance"
                app:layout_constraintStart_toStartOf="@id/cardBalance"
                app:layout_constraintTop_toBottomOf="@id/cardBalance">

                <LinearLayout
                    android:id="@+id/btnSend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="6dp"
                    android:background="@drawable/gradient_button_corporate"
                    android:paddingVertical="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:outlineProvider="background">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_arrow_upward"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Enviar"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnReceive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="6dp"
                    android:background="@drawable/gradient_button_corporate"
                    android:paddingVertical="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:outlineProvider="background">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_arrow_downward"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Recibir"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvRecentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movimientos recientes"
                android:layout_marginTop="40dp"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold"
                android:textColor="#1C1B1F"
                app:layout_constraintStart_toStartOf="@id/layoutActions"
                app:layout_constraintTop_toBottomOf="@id/layoutActions" />

            <TextView
                android:id="@+id/btnViewMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver todo"
                android:textColor="#8572D2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintEnd_toEndOf="@id/layoutActions"
                app:layout_constraintTop_toTopOf="@id/tvRecentTitle"
                app:layout_constraintBottom_toBottomOf="@id/tvRecentTitle" />

            <LinearLayout
                android:id="@+id/listTransactions"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvRecentTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/layoutActions"
                app:layout_constraintEnd_toEndOf="@id/layoutActions">

                <include layout="@layout/item_transaction" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>