<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main_background"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/header_35_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Cerrar SesiÃ³n"
        android:textColor="#B00020"
        android:textStyle="bold"
        android:textSize="16sp"
        app:strokeColor="#B00020"
        app:strokeWidth="1dp"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_logout"
        app:iconTint="#B00020"
        app:iconGravity="textStart"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/btnLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <LinearLayout
                android:id="@+id/cardUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/gradient_main_complementary"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:padding="24dp"
                android:gravity="center_vertical"
                android:outlineProvider="background">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cardCornerRadius="36dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="2dp">
                    <ImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_account_circle"
                        app:tint="#8572D2"
                        android:padding="2dp"
                        android:scaleType="centerCrop"/>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usuario"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="#1C1B1F"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="usuario@datacash.com"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="#49454F" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajustes de Cuenta"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="#49454F"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/layoutOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_main_complementary"
                android:elevation="2dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="24dp"
                android:outlineProvider="background">

                <RelativeLayout
                    android:id="@+id/btnEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingHorizontal="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:id="@+id/icEdit"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_edit"
                        app:tint="#6200EA"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editar Perfil"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="#1C1B1F"
                        android:layout_toEndOf="@id/icEdit"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#212121"
                        android:alpha="0.7"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#1A000000" android:layout_marginStart="64dp" android:layout_marginEnd="20dp"/>

                <RelativeLayout
                    android:id="@+id/btnSecurity"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingHorizontal="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:id="@+id/icSecurity"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_security"
                        app:tint="#6200EA"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seguridad"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="#1C1B1F"
                        android:layout_toEndOf="@id/icSecurity"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#212121"
                        android:alpha="0.7"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#1A000000" android:layout_marginStart="64dp" android:layout_marginEnd="20dp"/>

                <RelativeLayout
                    android:id="@+id/btnHelp"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingHorizontal="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:id="@+id/icHelp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_help_outline"
                        app:tint="#6200EA"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ayuda y Soporte"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="#1C1B1F"
                        android:layout_toEndOf="@id/icHelp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#212121"
                        android:alpha="0.7"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>