<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloRecibir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recibir dinero"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#0D47A1" />

    <!-- Alias del usuario -->
    <TextView
        android:id="@+id/tvAliasUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu alias: @Laura123"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:background="#E3F2FD"
        android:textColor="#000000"
        android:layout_marginBottom="20dp" />

    <!-- Código QR simulado -->
    <TextView
        android:id="@+id/tvCodigoQR"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="#BDBDBD"
        android:gravity="center"
        android:text="QR"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp" />

    <!-- Instrucción -->
    <TextView
        android:id="@+id/tvInstruccionRecibir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Muestra este código para recibir dinero"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#212121"
        android:layout_marginBottom="20dp" />

    <!-- Botón compartir -->
    <Button
        android:id="@+id/btnCompartirQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compartir código"
        android:background="#4CAF50"
        android:textColor="#FFFFFF" />

</LinearLayout>
