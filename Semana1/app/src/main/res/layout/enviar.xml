        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnMonto10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S/ 10"
            android:background="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnMonto20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S/ 20"
            android:background="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnMonto50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S/ 50"
            android:background="#4CAF50"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- BotÃ³n enviar -->
    <Button
        android:id="@+id/btnConfirmarEnvio"
