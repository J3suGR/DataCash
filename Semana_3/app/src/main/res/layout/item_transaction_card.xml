<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="#FFFFFF"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/transaction_card_bg">

        <ImageView
            android:id="@+id/transactionIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_transaction_default"
            app:tint="#9E9E9E"
            android:contentDescription="Icono de transacciÃ³n"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/transactionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pago de Luz (ENEL)"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/transactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 de Octubre, 2023"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:textColor="#757575"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/transactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- S/ 85.00"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#E53935" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>